{% extends "admin/layout_admin.html.twig" %}

{% block body %}
    <!-- Example DataTables Card-->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> Data Table Example <a class="btn btn-primary" href="{{ path('add_user') }}"><i class="fa fa-plus"></i> Ajouter un utilisateur</a></div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>Nom d'utilisateur</th>
                        <th>Email</th>
                        <th>Date d'inscription</th>
                        <th>RÃ´les</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                    <tr>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.registerDate | date('d/m/Y') }}</td>
                        <td>{% for role in user.roles %}{{ role }} {% endfor %}</td>
                        <td>
                            <a href="{{ path('delete_user', { 'id' : user.id }) }}" class="btn btn-outline-danger"><i class="fa fa-trash"></i></a>
                            <a href="{{ path('edit_user', { 'id' : user.id }) }}" class="btn btn-outline-success"><i class="fa fa-pencil"></i></a>
                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
    </div>
{% endblock body %}