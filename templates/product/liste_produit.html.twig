{% extends "admin/layout_admin.html.twig" %}

{% block body %}
    <!-- Example DataTables Card-->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> Data Table Example <a class="btn btn-primary" href="{{ path('add_product') }}"><i class="fa fa-plus"></i> Ajouter un produit</a></div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>Titre</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for product in products %}
                        <tr>
                            <td>{{ product.title }}</td>
                            <td>{{ product.description }}</td>
                            <td>
                                <a href="{{ path('delete_product', { 'id' : product.id }) }}" class="btn btn-outline-danger"><i class="fa fa-trash"></i></a>
                                <a href="{{ path('edit_product', { 'id' : product.id }) }}" class="btn btn-outline-success"><i class="fa fa-pencil"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
    </div>
{% endblock body %}